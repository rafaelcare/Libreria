<h2>Crear cuenta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	 
	<div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, autofocus: true, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombre, 'Nombre completo', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :direccion, 'Dirección', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :direccion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :telefono, 'Teléfono', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telefono, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :role, 'Rol', :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :role, User::ROLES, :to_s, :humanize, :class => 'text_field' %>
    </div>  
  </div> 
  <div class="control-group">
    <%= f.label :email, 'Correo electrónico', :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, 'Contraseña', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, autocomplete: "off", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, 'Confirmar contraseña', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'text_field' %>
    </div>  
  </div>
  <div ><%= f.submit "Aceptar", :class => 'btn btn-primary' %></div>

  <%#= render "devise/shared/links" %>
<% end %>


