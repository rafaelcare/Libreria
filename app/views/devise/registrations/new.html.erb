<h2>Crear cuenta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	 
	<div><%= f.label :username %>
  	<%= f.text_field :username, autofocus: true %>
  </div>
  <div><%= f.label :nombre,'Nombre completo' %>
  	<%= f.text_field :nombre %>
  </div>
  <div><%= f.label :direccion, 'Dirección' %>
  	<%= f.text_field :direccion %>
  </div>
  <div><%= f.label :telefono, 'teléfono' %>
  	<%= f.text_field :telefono %>
  </div>
  <div><%= f.label :role, 'Rol' %>
  	<%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
  </div>   
  <div><%= f.label :email, 'Correo electrónico' %>
  <%= f.email_field :email %></div>
  <div><%= f.label :password, 'Contraseña' %>
    <%= f.password_field :password, autocomplete: "off" %></div>
  <div><%= f.label :password_confirmation, 'Repetir contraseña' %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div ><%= f.submit "Aceptar", :class => 'btn btn-primary' %></div>

  <%#= render "devise/shared/links" %>
<% end %>


