<%= form_for @goal_sale, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :usuario_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :usuario_id, f.user.usuario_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :meta, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :meta, :class => 'text_field' %>
    </div>
  </div>
  <%#=<div class="control-group">
    <%= f.label :alcanzado, :class => 'control-label' >
    <div class="controls">
      <%= f.text_field :alcanzado, :class => 'text_field' 
    </div>
  </div>%>
  <div class="control-group">
    <%= f.label :fechainicio,'Fecha inicio',:class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :fechainicio, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fechafin, 'Fecha fin', :class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :fechafin, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                goal_sales_path, :class => 'btn' %>
  </div>
<% end %>
